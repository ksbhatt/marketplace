@model WebApplication3.context.User

@{
    ViewBag.Title = "ForgotPassword";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <!-- important meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- title -->
    <title>MARKETPLACE</title>

    <!-- favicon -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/mytemplate/")Marketplace/front/images/favicon.ico">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")Marketplace/front/css/bootstrap/6.1%20bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--custom CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")Marketplace/front/css/main.css">
</head>

<body style="background: url('@Url.Content("~/Content/mytemplate/")Marketplace/front/images/banner-with-overlay.jpg')no-repeat center  ">

    <img src="@Url.Content("~/Content/mytemplate/")Marketplace/front/images/logo.png" alt="logo" class="center">

    <div class="bg-img">
        @using (Html.BeginForm())
         {
            <form class="container">
                <div class="heading">
                    <h1>Forgot Password?</h1>
                    <h5>Enter your email to reset your password</h5>
                </div>
                <div class="form-group" style="margin-top: 45px">
                    <label for="exampleInputEmail1">Email</label><br>
                    @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", style = "width:100% !important"  })
                </div>
                <button type="submit" class="btn btn-submit" style="margin-bottom: 30px; margin-left: 8%">SUBMIT</button>
            </form>
         }
    </div>

    <!-- Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


    <!-- Bootstrap JS -->
    <script src="@Url.Content("~/Content/mytemplate/")Marketplace/front/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="@Url.Content("~/Content/mytemplate/")Marketplace/front/js/script.js"></script>


</body>

</html>