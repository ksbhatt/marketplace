@model NotesMarketplace.context.ResetPasswordModel

@{
    ViewBag.Title = "ResetPassword";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- important meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- title -->
    <title>MARKETPLACE</title>

    <!-- favicon -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/mytemplate/")Marketplace/front/images/favicon.ico">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")Marketplace/front/css/bootstrap/6.1%20bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--custom CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")Marketplace/front/css/main.css">
</head>

<body style="background: url('@Url.Content("~/Content/mytemplate/")Marketplace/front/images/banner-with-overlay.jpg')">
    <!-- Login Page -->
    <img src="@Url.Content("~/Content/mytemplate/")Marketplace/front/images/top-logo.png" alt="logo" class="center">


    <div class="bg-img">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form class="container">
                <div class="heading">
                    <h1>Change Password</h1>
                    <h5>Enter your new password to change your password</h5>
                </div>
                <div class="form-group" style="margin-top: 30px">
                    <label id="password1" for="exampleInputPassword1">Old Password</label><br>
                    <input type="password" name="player_password" id="pass_log_id" placeholder="Enter Your Old Password" style="margin-bottom: 30px" />

                    <span toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-password"></span>

                </div>
                <div class="form-group">

                    <label id="password1" for="exampleInputPassword1">New Password</label><br>
                    <input type="password" name="player_password" id="pass_log_id" placeholder="Enter Your New Password" style="margin-bottom: 30px" />
                    <span toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-password"></span>


                </div>
                <div class="form-group">
                    <label id="password1" for="exampleInputPassword1">Confirm Password</label>
                    <input type="password" name="player_password" id="pass_log_id" placeholder="Enter Your Confirm Password" />
                    <span toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-password"></span>

                </div>
                <button type="submit" class="btn btn-primary" style="margin-bottom: 30px; margin-left: 8%;">SUBMIT</button>

            </form>
        }
    </div>
    <!-- Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


    <!-- Bootstrap JS -->
    <script src="@Url.Content("~/Content/mytemplate/")Marketplace/front/js/bootstrap/bootstrap.miin.js"></script>

    <!-- Custom JS -->
    <script src="@Url.Content("~/Content/mytemplate/")Marketplace/front/js/script.js"></script>

</body>

</html>


