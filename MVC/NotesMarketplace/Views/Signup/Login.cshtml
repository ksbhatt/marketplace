@model NotesMarketplace.context.User

@{
    ViewBag.Title = "Login";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- important meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- title -->
    <title>MARKETPLACE</title>

    <!-- favicon -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/mytemplate/")Marketplace/front/images/favicon.ico">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")Marketplace/front/css/bootstrap/6.1%20bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--custom CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")Marketplace/front/css/main.css">
</head>

<body style="background: url('@Url.Content("~/Content/mytemplate/")Marketplace/front/images/banner-with-overlay.jpg') no-repeat center ">



    <img src="@Url.Content("~/Content/mytemplate/")Marketplace/front/images/logo.png" alt="logo" class="center">

    <div class="bg-img">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form class="container">
                <div class="heading">
                    <h1>Login</h1>
                    <h5>Enter your email address and password to login</h5>
                </div>
                <div class="form-group" style="margin-top: 45px">
                    <label for="exampleInputEmail1">Email</label><br>
                    @Html.EditorFor(x => x.EmailID, new { @class = "form-control", @style = "width: 480px;" })

                </div>
                <div class="form-group" style="margin-top: 30px">
                    <label id="password" for="exampleInputPassword1">Password @Html.ActionLink("forgot password", "ForgotPassword", "Signup")</label><br />
                    @Html.EditorFor(x => x.Password, new { @class = "form-control", @style = "width: 480px;" })

                    <span toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-password"></span>


                </div>

                <div class="heading" style="margin-top:10px">
                    <p>The password you've entered is incorrect</p>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Remember Me</label>
                </div>
                <button type="submit" class="btn btn-primary" style=" margin-left: 8%">LOGIN</button>

            </form>
        }
        <div>
            <p style="padding-left: 25%;padding-top: 2%">Dont'have an account?</p>@Html.ActionLink("SignUp", "Signup", "User", new { style = "padding-left: 55%;" })
        </div>


    </div>
    <!-- Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


    <!-- Bootstrap JS -->
    <script src="@Url.Content("~/Content/mytemplate/")Marketplace/front/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="@Url.Content("~/Content/mytemplate/")Marketplace/front/js/script.js"></script>

</body>

</html>


